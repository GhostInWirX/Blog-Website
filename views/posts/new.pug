extends ../layout

block content
  .row
    .col-md-8.mx-auto
      h1.mb-4 Create New Post
      form(action="/posts", method="POST")
        .form-group.mb-3
          label(for="title") Title
          input.form-control.text-white(type="text", name="title", required)
        .form-group.mb-3
          label(for="content") Content
          textarea.form-control.text-white(name="content", rows="5", required)
        .form-group.mb-3
          label(for="tags") Tags (comma separated)
          input.form-control.text-white(type="text", name="tags", placeholder="nodejs, express, mongodb")
        button.btn.btn-primary(type="submit") Create Post